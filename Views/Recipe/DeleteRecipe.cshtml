@model Recipe

@{
    ViewData["Title"] = "Delete Recie";
}

<h3 class="mx-5 mt-5">Edit @Model.Name</h3>
<hr />
<div class="row mx-5 mt-5 mb-5">
    <div class="col-md-6 mt-3">
        <img src="~/images/@Model.ImageUrl" width="100%" height="100%" class="img-thumbnail" />
    </div>
    <div class="col-md-6 ">
        <form asp-action="DeleteRecipe" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mt-3">
                <label asp-for="Name" class="control-label"></label>
                <input readonly asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea readonly asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Ingredients" class="control-label"></label>
                <textarea readonly asp-for="Ingredients" class="form-control"></textarea>
                <span asp-validation-for="Ingredients" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Directions" class="control-label"></label>
                <textarea readonly asp-for="Directions" class="form-control"></textarea>
                <span asp-validation-for="Directions" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="CategoryId" class="control-label "></label>
                <input readonly asp-for="CategoryId" class="form-control" />
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-secondary" asp-action="GetRecipes">Back to List</a>
            </div>
        </form>
    </div>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}