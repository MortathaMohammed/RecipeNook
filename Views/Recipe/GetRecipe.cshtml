@model Recipe
@{
    ViewData["Title"] = "Recipe";
}

<div class="card mb-3">
    <h3 class="card-header">@Model.Name</h3>
    <div class="card-body">
        <p class="card-subtitle text-muted">@Model.Description</p>
    </div>
    <img src="~/images/@Model.ImageUrl" alt="" class="d-block user-select-none" width="100%" height="100%"
        aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice"
        viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
    <div class="card-body">
        <p class="card-text">@Model.Description.</p>
        <p class="card-text">@Model.Directions.</p>
        <p class="card-text">@Model.Ingredients.</p>
    </div>
    <div class="card-body">

        <a class="btn btn-info" asp-action="EditRecipe" asp-route-id="@Model.Id">Edit</a>

        <a class="btn btn-warning" asp-action="DeleteRecipe" asp-route-id="@Model.Id">Delete</a>
    </div>
</div>