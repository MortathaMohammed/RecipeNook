@model List<Category>
@{
    ViewData["Title"] = "Categories";
}

<div class="mt-3 mx-3">
    <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-primary ">Create Category</a>
</div>

<div class="d-inline-block">
    @foreach (var item in Model)
    {
        <div class="card mt-3 mb-3 mx-3 d-inline-block " style=" width: 20rem; height: 20rem;">
            <a asp-controller="Recipe" asp-action="GetRecipeByCategoryId" asp-route-id="@item.Id">
                <img src="~/images/@item.ImageUrl" alt="" class="d-block user-select-none" width="100%" height="200"
                    aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice"
                    viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
            </a>
            <div class="card-body">
                <h4 class="card-subtitle mb-3">@item.Name</h4>
                <a class="btn btn-info" asp-action="EditCategory" asp-route-id="@item.Id">Edit</a>

                <a class="btn btn-warning mx-3" asp-action="DeleteCategory" asp-route-id="@item.Id">Delete</a>
            </div>
        </div>
    }
</div>
