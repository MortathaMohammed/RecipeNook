@model Category
@{
    ViewData["Title"] = "Category";
}

<div class="d-inline-block">
    @foreach (var item in Model.Recipes)
    {
        <div class="card mt-3 mb-3 mx-3 d-inline-block " style=" width: 20rem; height: 18rem;">
            <img src="~/images/@item.ImageUrl" alt="" class="d-block user-select-none" width="100%" height="200"
                aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice"
                viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
            <div class="card-body">
                <h2>@item.Name</h2>
            </div>
        </div>
    }
</div>