@model dynamic

@{
    ViewData["Title"] = "Home Page";
}
<div class="m-3 d-block ">
    @foreach (var category in Model.Category)
    {
        <button type="button" class="btn btn-outline-primary">@category.Name</button>
    }
</div>
<div class="d-inline-block">
    @foreach (var item in Model.Recipe)
    {
        <div class="card mt-3 mb-3 mx-3 d-inline-block " style=" width: 20rem; height: 18rem;">
            <a asp-controller="Recipe" asp-action="GetRecipe" asp-route-id="@item.Id">
                <img src="~/images/@item.ImageUrl" alt="" class="d-block user-select-none" width="100%" height="200"
                    aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice"
                    viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
            </a>
            <div class="card-body">
                <h4>@item.Name</h4>
            </div>
        </div>
    }
</div>
